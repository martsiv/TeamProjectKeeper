<UserControl x:Class="WPFClient.Views.UserControlGeneralInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:WPFClient.Views"
             xmlns:vm="clr-namespace:WPFClient.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:VM_GeneralInfo}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel Background="White">
        <Label
            DockPanel.Dock="Top"
             Name="View1" 
             VerticalAlignment="Top" HorizontalAlignment="Center"
             Height="40" 
             Canvas.Left="10" Canvas.Top="10" 
             FontSize="14" FontFamily="Georgia" 
             FontWeight="Bold"
             Content="{Binding Title}"/>
        <Border DockPanel.Dock="Top">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding CurrentEmployeeModel.Name}"/>
                <TextBlock Text="{Binding IsOpenedWorkShift}"/>
                <Button Command="{Binding OpenWorkShiftEmployeeCmd}">Відкрити зміну</Button>
                <Button Command="{Binding CloseWorkShiftEmployeeCmd}">Закрити зміну</Button>

            </StackPanel>
        </Border>
        <UniformGrid DockPanel.Dock="Bottom" Rows="1">
            <Button                
                 Content="Login"
                 Command="{Binding GoToLogin}"
                 Width="90" Height="30" Margin="0,20" />
            <Button                
      Content="Previous"
      Command="{Binding GoToPreviusPage}"
      Width="90" Height="30" Margin="0,20" />
            <Button                
                 Content="Orders"
                 Command="{Binding GoToOrders}"
                 Width="90" Height="30" Margin="0,20" />
        </UniformGrid>

        <Border>

        </Border>

    </DockPanel>
</UserControl>
