            <Button                
                 Content="OrderQuickCheck"
                 Command="{Binding GoToOrderQuickCheck}"
                 Width="90" Height="30" Margin="0,20" />
        </UniformGrid>

        <Border>

        </Border>-->

    </DockPanel>
</UserControl>
